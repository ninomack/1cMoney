Функция СвойствоXDTOЕслиЕсть(ОбъектXDTO, ИмяСвойства, ЗначениеПоУмолчанию = Неопределено) Экспорт

	СвойствоОбъекта = ОбъектXDTO.Свойства().Получить(ИмяСвойства);
	Если СвойствоОбъекта = Неопределено Тогда
		Возврат NULL;
	КонецЕсли;
	
	Если Не ОбъектXDTO.Установлено(СвойствоОбъекта) Тогда
		Возврат ЗначениеПоУмолчанию;
	КонецЕсли;
	 
	Возврат ОбъектXDTO[ИмяСвойства];

КонецФункции

// Выполняет преобразование объекта XDTO в структуру с данными.
//
// Параметры:
//  ОбъектXDTO - ОбъектXDTO - Значение, которое необходимо преобразовать.
//
// Возвращаемое значение:
//  Структура - Структура, имитирующая объект XDTO.
//    Ключи структуры соответствуют свойствам объекта XDTO.
//    Значения соответствуют значениям свойств объекта XDTO.
//
Функция ОбъектXDTOВСтруктуру(ОбъектXDTO, ВключаяПустые = Ложь) Экспорт
	
	Приемник = Новый Структура;
	
	Для Каждого Свойство Из ОбъектXDTO.Свойства() Цикл
		
		ЗначениеСвойства = ?(ОбъектXDTO.Установлено(Свойство), ОбъектXDTO[Свойство.Имя], Неопределено);
		
		Если ЗначениеСвойства = Неопределено Тогда
			Если ВключаяПустые Или Свойство.НижняяГраница > 0 Тогда
				Приемник.Вставить(Свойство.Имя, Неопределено);
			КонецЕсли;
			Продолжить;
		КонецЕсли;
		
		Если ТипЗнч(ЗначениеСвойства) = Тип("СписокXDTO") Тогда
			
			Приемник.Вставить(Свойство.Имя, Новый Массив);
			Для Счетчик = 0 По ЗначениеСвойства.Количество() -1 Цикл
				Приемник[Свойство.Имя].Добавить(ПриведенноеЗначениеСвойстваXDTO(ЗначениеСвойства.ПолучитьXDTO(Счетчик))); 
			КонецЦикла;
			
		Иначе
			
			Приемник.Вставить(Свойство.Имя, ПриведенноеЗначениеСвойстваXDTO(ОбъектXDTO.ПолучитьXDTO(Свойство), ВключаяПустые));
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если Приемник.Свойство("КлючевыеСвойства")
		И Приемник.КлючевыеСвойства.Свойство("Ссылка") Тогда
		Приемник.Вставить("Ссылка", Приемник.КлючевыеСвойства.Ссылка);
	КонецЕсли;
	
	Возврат Приемник;
КонецФункции

// Возвращает значение свойства, приведенное к типам информационной базы
//
//Параметры:
//	ЗначениеСвойства
//
//Возвращаемое значение:
//	Произвольный тип
//
Функция ПриведенноеЗначениеСвойстваXDTO(ЗначениеСвойства, ВключаяПустые = Ложь) Экспорт

	Если ЗначениеСвойства = Неопределено Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	ТипСвойства = ТипЗнч(ЗначениеСвойства);
	Если ТипСвойства = Тип("ОбъектXDTO") Тогда
		
		Возврат ОбъектXDTOВСтруктуру(ЗначениеСвойства, ВключаяПустые);
		
	ИначеЕсли ТипСвойства = Тип("ЗначениеXDTO") Тогда
		
		Если ЭтоСсылкаXDTO(ЗначениеСвойства.Тип()) Тогда
			Возврат СтруктураЗначенияXDTOСсылочногоТипа(ЗначениеСвойства, Ложь);
		ИначеЕсли ЭтоПеречислениеXDTO(ЗначениеСвойства.Тип()) Тогда
			Возврат СтруктураЗначенияXDTOСсылочногоТипа(ЗначениеСвойства, Истина);
		КонецЕсли;
	
	КонецЕсли;

	Возврат ЗначениеСвойства.Значение;
	
КонецФункции
 
Функция ЭтоСсылкаXDTO(Знач Тип) Экспорт
	
	Возврат ФабрикаXDTO.Тип("http://www.1c.ru/SSL/Exchange/Message", "Ref").ЭтоПотомок(Тип);
	
КонецФункции

Функция ЭтоПеречислениеXDTO(Знач Тип) Экспорт

	Возврат Тип.Фасеты <> Неопределено
		И Тип.Фасеты.Перечисления <> Неопределено
		И Тип.Фасеты.Перечисления.Количество() > 0;
		
КонецФункции

Функция СтруктураЗначенияXDTOСсылочногоТипа(ЗначениеXDTO, ЭтоПеречисление) Экспорт
	
	СтруктураXDTO = Новый Структура;
	СтруктураXDTO.Вставить("ЭтоСсылка", Не ЭтоПеречисление);
	СтруктураXDTO.Вставить("ЭтоПеречисление", ЭтоПеречисление);
	СтруктураXDTO.Вставить("ТипЗначенияXDTO", ЗначениеXDTO.Тип());
	СтруктураXDTO.Вставить("Значение", ЗначениеXDTO.Значение);

	Возврат СтруктураXDTO;
	
КонецФункции

