		Выборка = ПакетРезультатов[Счетчик].Выбрать();
		Если Выборка.Следующий() Тогда
			КонтрольноеКоличество = КонтрольноеКоличество + Выборка.Количество;
			Если КонтрольноеКоличество > 2 Тогда
				// При заполнении пустой базы создается 2 кошелька
				Прервать;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	Возврат КонтрольноеКоличество <= 2;
	
КонецФункции

// Возвращает имя группировки итогов в запросах по длительности периода
