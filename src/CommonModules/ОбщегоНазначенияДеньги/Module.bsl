		Для каждого КлючИЗначение Из ДополнительныеСвойства Цикл
			НаборЗаписей.ДополнительныеСвойства.Вставить(КлючИЗначение.Ключ, КлючИЗначение.Значение);
		КонецЦикла;
	КонецЕсли;
	
	Если Отправитель <> Неопределено Тогда
		Если Метаданные.ПланыОбмена[Отправитель.Метаданные().Имя].Состав.Найти(Метаданные.РегистрыСведений[ИмяРегистра]) <> Неопределено Тогда
			НаборЗаписей.ОбменДанными.Загрузка    = Истина;
			НаборЗаписей.ОбменДанными.Отправитель = Отправитель;
		КонецЕсли;
	КонецЕсли;
	
	НаборЗаписей.Записать(Истина);
	
