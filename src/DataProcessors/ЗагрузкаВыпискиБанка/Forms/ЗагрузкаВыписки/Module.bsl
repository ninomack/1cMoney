Функция НовоеЗначениеАналитики(СтрокаАналитики)

	Типы = СтрокаАналитики.ВидАналитики.ТипЗначения.Типы();
	Если Типы.Количество() <> 1 Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	МетаданныеТипа = Метаданные.НайтиПоТипу(Типы[0]);
	Если МетаданныеТипа = Неопределено Тогда
		Возврат СтрокаАналитики.Представление;
	КонецЕсли;

	Если ОбщегоНазначения.ЭтоСправочник(МетаданныеТипа) Тогда
		
		Если МетаданныеТипа.Владельцы.Количество() > 0 Тогда
			ВладелецАналитики = СтрокаАналитики.ВидАналитики;
		КонецЕсли;
		
		СуществующийЭлемент = Справочники[МетаданныеТипа.Имя].НайтиПоНаименованию(СтрокаАналитики.Представление, Истина, , ВладелецАналитики);
		Если ЗначениеЗаполнено(СуществующийЭлемент) Тогда
			Возврат СуществующийЭлемент;
		КонецЕсли;
		
		СправочникОбъект = Справочники[МетаданныеТипа.Имя].СоздатьЭлемент();
		СправочникОбъект.Заполнить(Неопределено);
		СправочникОбъект.Наименование = СтрокаАналитики.Представление;
		Если ЗначениеЗаполнено(ВладелецАналитики) Тогда
			СправочникОбъект.Владелец = ВладелецАналитики;
		КонецЕсли;
		СправочникОбъект.Записать();
		Возврат СправочникОбъект.Ссылка;
		
	КонецЕсли;
	 
	Возврат Неопределено;
	
КонецФункции
 

