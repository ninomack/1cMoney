&НаСервере
Процедура ОбновитьЗначенияАналитикиСервер(ТаблицаАналитики, ИДСТроки)

	СтрокаОперации = Объект.ТаблицаОпераций.НайтиПоИдентификатору(ИДСТроки);
	Если СтрокаОперации = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	СтрокаОперации.Аналитика.Очистить();
	
	ЗначенияАналитики = Новый Соответствие;
	Для каждого СтрокаАналитики Из ТаблицаАналитики Цикл
		
		НоваяСтрока = СтрокаОперации.Аналитика.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАналитики);
		
		Если ЗначениеЗаполнено(СтрокаАналитики.Значение) Тогда
			ЗначенияАналитики.Вставить(СтрокаАналитики.ВидАналитики, Новый Соответствие());
			ЗначенияАналитики[СтрокаАналитики.ВидАналитики].Вставить(СтрокаАналитики.КлючевоеСлово, СтрокаАналитики.Значение);
		КонецЕсли;
		СтрокаАналитики.Представление = ?(ЗначениеЗаполнено(СтрокаАналитики.Значение), Строка(СтрокаАналитики.Значение), СтрокаАналитики.КлючевоеСлово);
		
	КонецЦикла;
	
	ОбновитьПредствалениеАналитики(СтрокаОперации);
	
	Если ЗначенияАналитики.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Для каждого КлючиВидовАналитик Из ЗначенияАналитики Цикл
		
		Для каждого КлючИЗначение Из КлючиВидовАналитик.Значение Цикл
			
			Если ЗначениеЗаполнено(КлючИЗначение.Значение) И ЗначениеЗаполнено(КлючИЗначение.Ключ) Тогда
				РегистрыСведений.КлючевыеСловаОбъектов.ЗаписатьКлючевоеСловоОбъекта(КлючИЗначение.Ключ, КлючИЗначение.Значение);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	 
	
	// Устанавливаем такие же значения для прочих аналитик с таким же ключевым словом и видом аналитики
	ОбновитьАналитикуВСтроках(СтрокаОперации, ЗначенияАналитики);

КонецПроцедуры

&НаСервере
Процедура ОбновитьАналитикуВСтроках(РедактируемаяСтрокаВыписки, ЗначенияАналитики = Неопределено)

	Если ЗначенияАналитики = Неопределено Тогда
		
		ЗначенияАналитики = Новый Соответствие;
		Для каждого СтрокаАналитики Из РедактируемаяСтрокаВыписки.Аналитика Цикл
			Если ЗначениеЗаполнено(СтрокаАналитики.Значение) И ЗначениеЗаполнено(СтрокаАналитики.ВидАналитики) И ЗначениеЗаполнено(СтрокаАналитики.КлючевоеСлово) Тогда
				СоответствиеСлова = Новый Соответствие();
				СоответствиеСлова.Вставить(СтрокаАналитики.КлючевоеСлово, СтрокаАналитики.Значение);
				ЗначенияАналитики.Вставить(СтрокаАналитики.ВидАналитики, СоответствиеСлова);
			КонецЕсли;
		КонецЦикла;
		
	КонецЕсли;
	
	Для каждого СтрокаВыписки Из Объект.ТаблицаОпераций Цикл
		
		Если Не ЗначениеЗаполнено(СтрокаВыписки.СсылкаНаОперацию) 
				И СтрокаВыписки.ВидОперации = РедактируемаяСтрокаВыписки.ВидОперации
				И СтрокаВыписки <> РедактируемаяСтрокаВыписки И СтрокаВыписки.Аналитика.Количество() > 0 Тогда
				
			Обновлять = Ложь;
			Для каждого СтрокаАналитики Из СтрокаВыписки.Аналитика Цикл
				
				Набор = ЗначенияАналитики.Получить(СтрокаАналитики.ВидАналитики);
				Если Набор = Неопределено Тогда
					Продолжить;
				КонецЕсли;
				
				Значение = Набор.Получить(СтрокаАналитики.КлючевоеСлово);
				Если Значение = Неопределено Тогда
					Продолжить;
				КонецЕсли;
				
				СтрокаАналитики.Значение = Значение;
				СтрокаАналитики.Представление = Строка(Значение);
				Обновлять= Истина;
				
			КонецЦикла;
			
			Если Обновлять Тогда
				ОбновитьПредствалениеАналитики(СтрокаВыписки);
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;

