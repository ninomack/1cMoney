&НаКлиентеНаСервереБезКонтекста
Функция ЗначенияЗаполненияОперации(Знач ТаблицаОпераций, Знач ИДСтроки, ВалютаУчета)

	ДанныеСтроки = ТаблицаОпераций.НайтиПоИдентификатору(ИДСтроки);
	
	ЗначенияЗаполнения = Новый Структура;
	ЗначенияЗаполнения.Вставить("Дата",        ДанныеСтроки.Дата);
	ЗначенияЗаполнения.Вставить("Кошелек",     ДанныеСтроки.Кошелек);
	ЗначенияЗаполнения.Вставить("КомментарийОперации", ДанныеСтроки.Комментарий);
	
	Если ДанныеСтроки.ВидОперации = "Доход" Тогда
		
		ЗначенияЗаполнения.Вставить("СуммаДохода",     ДанныеСтроки.СуммаПоступления);
		ЗначенияЗаполнения.Вставить("СтатьяДохода",    ДанныеСтроки.СтатьяДолг);
		ЗначенияЗаполнения.Вставить("ВалютаОперации",  ?(ЗначениеЗаполнено(ДанныеСтроки.Кошелек), ДанныеСтроки.Кошелек.Валюта, ВалютаУчета));
		
	ИначеЕсли ДанныеСтроки.ВидОперации = "Расход" Тогда
		
		ЗначенияЗаполнения.Вставить("КошелекДолг",    ДанныеСтроки.Кошелек);
		ЗначенияЗаполнения.Вставить("СуммаЧека",      ДанныеСтроки.СуммаСписания);
		ЗначенияЗаполнения.Вставить("СтатьяРасходаИмущество",  ДанныеСтроки.СтатьяДолг);
		
	ИначеЕсли ДанныеСтроки.ВидОперации = "Перемещение" Или ДанныеСтроки.ВидОперации = "ОбменВалюты" Тогда
		
		Если ЗначениеЗаполнено(ДанныеСтроки.СуммаПоступления) И Не ЗначениеЗаполнено(ДанныеСтроки.СуммаСписания) Тогда
			
			ЗначенияЗаполнения.Вставить("КошелекОткуда", ДанныеСтроки.СтатьяДолг);
			ЗначенияЗаполнения.Вставить("КошелекКуда",   ДанныеСтроки.Кошелек);
			Если ДанныеСтроки.ВидОперации = "Перемещение" Тогда
				ЗначенияЗаполнения.Вставить("СуммаОперации",   ДанныеСтроки.СуммаПоступления);
			Иначе
				ЗначенияЗаполнения.Вставить("СуммаПолучено",   ДанныеСтроки.СуммаПоступления);
			КонецЕсли;
			
		Иначе
			
			ЗначенияЗаполнения.Вставить("КошелекОткуда",   ДанныеСтроки.Кошелек);
			ЗначенияЗаполнения.Вставить("КошелекКуда",   ДанныеСтроки.СтатьяДолг);
			Если ДанныеСтроки.ВидОперации = "Перемещение" Тогда
				ЗначенияЗаполнения.Вставить("СуммаОперации",   ДанныеСтроки.СуммаСписания);
			Иначе
				ЗначенияЗаполнения.Вставить("СуммаВыдано",   ДанныеСтроки.СуммаСписания);
			КонецЕсли;
			
		КонецЕсли;
		 
	ИначеЕсли ДанныеСтроки.ВидОперации = "МыВзялиВДолг" Тогда
		
		ЗначенияЗаполнения.Вставить("Кредит",          ДанныеСтроки.СтатьяДолг);
		ЗначенияЗаполнения.Вставить("СуммаПолучено",   ДанныеСтроки.СуммаПоступления);
		ЗначенияЗаполнения.Вставить("СуммаКредита",    ДанныеСтроки.СуммаПоступления);
		
	ИначеЕсли ДанныеСтроки.ВидОперации = "МыВернулиДолг" Тогда
		
		ЗначенияЗаполнения.Вставить("Кредит",                     ДанныеСтроки.СтатьяДолг);
		ЗначенияЗаполнения.Вставить("ВыплаченоКредита",           ДанныеСтроки.СуммаСписания);
		ЗначенияЗаполнения.Вставить("СуммаКредитаВВалютеКредита", ДанныеСтроки.СуммаСписания);
		
	ИначеЕсли ДанныеСтроки.ВидОперации = "МыДалиВДолг" Тогда
		
		ЗначенияЗаполнения.Вставить("Долг",          ДанныеСтроки.СтатьяДолг);
		ЗначенияЗаполнения.Вставить("СуммаВыдано",   ДанныеСтроки.СуммаСписания);
		ЗначенияЗаполнения.Вставить("СуммаЗайма",    ДанныеСтроки.СуммаСписания);
		
	ИначеЕсли ДанныеСтроки.ВидОперации = "НамВернулиДолг" Тогда
		
		ЗначенияЗаполнения.Вставить("Долг",               ДанныеСтроки.СтатьяДолг);
		ЗначенияЗаполнения.Вставить("СуммаПолучено",      ДанныеСтроки.СуммаПоступления);
		ЗначенияЗаполнения.Вставить("СуммаВозвратаДолга", ДанныеСтроки.СуммаПоступления);
		
	КонецЕсли;

	Возврат ЗначенияЗаполнения;
	
КонецФункции

&НаСервере
Процедура ПриИзмененииФильтраТаблицыОпераций(ИзменятьОтбор = Ложь)

	КоличествоВсего        = Объект.ТаблицаОпераций.Количество();
	КоличествоНовых        = Объект.ТаблицаОпераций.Итог("НоваяОперация");
	
	ЗаголовокВсеОперации = НСтр("ru='Все операции (%1)'");
	ЗаголовокВсеОперации = СтрШаблон(ЗаголовокВсеОперации, КоличествоВсего);
	ЗаголовокНовые = НСтр("ru='Новые (%1)'");
	ЗаголовокНовые = СтрШаблон(ЗаголовокНовые, КоличествоНовых);
	ЗаголовокЗагруженные = НСтр("ru='Загруженные (%1)'");
	ЗаголовокЗагруженные = СтрШаблон(ЗаголовокЗагруженные, КоличествоВсего - КоличествоНовых);
	
	Элементы.ФильтрТаблицыОпераций.СписокВыбора[0].Представление = ЗаголовокВсеОперации;
	Элементы.ФильтрТаблицыОпераций.СписокВыбора[1].Представление = ЗаголовокНовые;
	Элементы.ФильтрТаблицыОпераций.СписокВыбора[2].Представление = ЗаголовокЗагруженные;
	
	Если ИзменятьОтбор Тогда
		
		Если ФильтрТаблицыОпераций = "Новые" Тогда
			Элементы.ТаблицаОпераций.ОтборСтрок = Новый ФиксированнаяСтруктура("НоваяОперация", 1);
		ИначеЕсли ФильтрТаблицыОпераций = "Загруженные" Тогда
			Элементы.ТаблицаОпераций.ОтборСтрок = Новый ФиксированнаяСтруктура("НоваяОперация", 0);
		Иначе
			Элементы.ТаблицаОпераций.ОтборСтрок = Неопределено;
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

