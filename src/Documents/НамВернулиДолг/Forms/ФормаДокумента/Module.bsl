&НаСервере
Процедура ДолгПриИзмененииСервер()

	Если ЗначениеЗаполнено(Объект.Долг) Тогда
		Объект.Контакт = Объект.Долг.Контакт;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Объект.Контакт) Тогда
		Массив = Новый Массив();
		Массив.Добавить(Новый СвязьПараметраВыбора("Отбор.Контакт", "Объект.Контакт", РежимИзмененияСвязанногоЗначения.НеИзменять));
		Элементы.Долг.СвязиПараметровВыбора = Новый ФиксированныйМассив(Массив);
	Иначе
		Элементы.Долг.СвязиПараметровВыбора = Новый ФиксированныйМассив(Новый Массив());
	КонецЕсли;
	
	Объект.ВалютаДолга  = Объект.Долг.Валюта;
	Если Объект.ВалютаДолга = ВалютаУчета ИЛИ НЕ ЗначениеЗаполнено(Объект.ВалютаДолга) Тогда
		КурсЗайма      = 1;
		КратностьЗайма = 1;
	Иначе
		КурсИКратность = РаботаСКурсамиВалют.ПолучитьКурсВалюты(Объект.ВалютаДолга, Объект.Дата, ВалютаУчета);
		КурсЗайма      = КурсИКратность.Курс;
		КратностьЗайма = КурсИКратность.Кратность;
	КонецЕсли; 
	
	РассчитатьОстаткиДолга();
	
	ПрочитатьПараметрыГрафикаПогашения();
	Если Объект.СуммаВозвратаДолга = 0 И Объект.СуммаПроцентовВВалютеДолга = 0 Тогда
		ЗаполнитьСуммамиГрафикаСервер();
	КонецЕсли; 
	
	Если Объект.СуммаВозвратаДолга = 0 И Объект.СуммаПроцентовВВалютеДолга = 0 Тогда
		Если ОстатокЗадолженности > 0 Тогда
			Объект.СуммаВозвратаДолга = ОстатокЗадолженности;
			Объект.СуммаПолучено = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаВозвратаДолга,
				 Объект.ВалютаДолга, Объект.ВалютаПолучено, КурсЗайма, КурсВыдано, КратностьЗайма, КратностьВыдано);
			Объект.СуммаПроцентов = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаПроцентовВВалютеДолга,
				Объект.ВалютаДолга, Объект.ВалютаПолучено, КурсЗайма, КурсВыдано, КратностьЗайма, КратностьВыдано);
		Иначе
			Объект.СуммаВозвратаДолга = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаПолучено,
				Объект.ВалютаПолучено, Объект.ВалютаДолга, КурсВыдано, КурсЗайма, КратностьВыдано, КратностьЗайма);
			Объект.СуммаПроцентовВВалютеДолга = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаПроцентов,
				Объект.ВалютаДолга, Объект.ВалютаПолучено, КурсЗайма, КурсВыдано, КратностьЗайма, КратностьВыдано);
		КонецЕсли;
	КонецЕсли; 
	
	СуммаПлатежаВсего = СуммаПлатежаВсего(ЭтаФорма);
	 
	ОстатокЗадолженностиНаКонец = ОстатокЗадолженности - Объект.СуммаВозвратаДолга;
	Если Объект.СуммаСписания > ОстатокЗадолженностиНаКонец ИЛИ ОстатокЗадолженностиНаКонец = 0 Тогда
		Объект.СуммаСписания  = 0;
		Объект.СтатьяСписания = Неопределено;
		СписатьОстатокДолга   = Ложь;
	КонецЕсли; 
	Если СписатьОстатокДолга Тогда
		Объект.СуммаСписания  = ОстатокЗадолженностиНаКонец;
	КонецЕсли; 
	
	УправлениеФормой(ЭтаФорма);

КонецПроцедуры

&НаСервере
Процедура ДолгНачалоВыбораИзСпискаСервер()
	
	СписокВыбора = Элементы.Долг.СписокВыбора;
	
	ДатаОстатков = ?(Объект.Проведен, Объект.Ссылка.МоментВремени(), КонецДня(ТекущаяДатаСеанса()));
	РазделыУчета.ЗаполнитьСписокВыбораДолговКонтакта(СписокВыбора, Объект.Контакт, ДатаОстатков, Истина, Ложь);
	
	Если НЕ ЗначениеЗаполнено(СписокВыбора) Тогда
		ДатаОстатков = ?(Объект.Проведен, Объект.Ссылка.Дата, КонецДня(ТекущаяДатаСеанса()));
		Представление = НСтр("ru = '<Нет долгов контакта %1 на %2>'");
		Представление = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(Представление, 
			?(ЗначениеЗаполнено(Объект.Контакт), """" + Объект.Контакт + """", НСтр("ru = '<Контакт не задан>'")), 
			Формат(ДатаОстатков, "ДФ='дд.ММ.гггг (ЧЧ:мм)'"));
		СписокВыбора.Добавить(Неопределено, Представление);
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура КошелекПриИзмененииСервер()
	
	Для Каждого СтрокаРасхода Из Объект.ДополнительныеРасходы Цикл
		СтрокаРасхода.КошелекРасхода = Объект.Кошелек;
	КонецЦикла; 

	ВидимостьФинансовойЦели = ЗначениеЗаполнено(Объект.Кошелек) И Объект.Кошелек.ИспользоватьДляНакоплений;
	
	Объект.ВалютаПолучено = Объект.Кошелек.Валюта;
	
	Если Объект.ВалютаПолучено = ВалютаУчета ИЛИ НЕ ЗначениеЗаполнено(Объект.ВалютаПолучено) Тогда
		КурсВыдано      = 1;
		КратностьВыдано = 1;
	Иначе
		КурсИКратность = РаботаСКурсамиВалют.ПолучитьКурсВалюты(Объект.ВалютаПолучено, Объект.Дата, ВалютаУчета);
		КурсВыдано      = КурсИКратность.Курс;
		КратностьВыдано = КурсИКратность.Кратность;
	КонецЕсли; 
	
	Объект.СуммаПолучено = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаВозвратаДолга,
		Объект.ВалютаДолга, Объект.ВалютаПолучено, КурсЗайма, КурсВыдано, КратностьЗайма, КратностьВыдано);
	Объект.СуммаПроцентов = РаботаСКурсамиВалютКлиентСервер.ПересчитатьИзВалютыВВалюту(Объект.СуммаПроцентовВВалютеДолга,
		Объект.ВалютаДолга, Объект.ВалютаПолучено, КурсЗайма, КурсВыдано, КратностьЗайма, КратностьВыдано);
	
	СуммаПлатежаВсего = СуммаПлатежаВсего(ЭтаФорма);
	
	Если НЕ ЗначениеЗаполнено(Объект.ФинансоваяЦель) Тогда
		Объект.ФинансоваяЦель = Справочники.ФинансовыеЦели.ОбщиеНакопления;
	КонецЕсли; 
	
	ОбновитьОстаткиДенег();
	
	УправлениеФормой(ЭтаФорма);

КонецПроцедуры

